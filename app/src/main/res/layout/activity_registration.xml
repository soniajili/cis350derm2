<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="cis350.instaderm.RegistrationActivity"
                android:id="@+id/registration">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="679dp"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <!-- Full Name Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Full Name"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:background="#F8F8FF"
                android:inputType="textPersonName"
                />

            <!-- Year of Birth Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Year of Birth"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="15dp"
                android:background="#F8F8FF"
                android:id="@+id/yearBirth"
                />

            <!-- Email Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Email"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                android:id="@+id/emailLabel"
                android:background="#F8F8FF"
                android:layout_gravity="center_horizontal"
                android:hint="Your email will also be your username"/>

            <!-- Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Password"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:background="#F8F8FF"
                android:id="@+id/passwordText"
                android:password="true"
                android:clickable="false"/>

            <!-- Gender Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Gender"/>
            <Spinner
                android:id="@+id/gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8FF"
                android:textSize="15dp"
                android:layout_gravity="center_horizontal"
                android:text="Select from menu"
                />

            <!-- Country Label -->
            <TextView
                android:id="@+id/countryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Country"
                android:textSize="20dp"/>
            <AutoCompleteTextView
                android:id="@+id/autocomplete_country"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8FF"
                android:textSize="15dp"
                android:hint="Begin typing to display countries"/>

            <!-- Practice Setting Label -->
            <TextView
                android:id="@+id/practiceSettingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="Practice Setting"/>
            <Spinner
                android:id="@+id/setting_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F8F8FF"
                android:layout_gravity="center_horizontal"
                android:textSize="15dp"
                android:text="Select from menu"
                />
            <!-- Type of User -->
            <TextView
                android:id="@+id/submissionUserDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#545454"
                android:textSize="15dp"
                android:text="@string/submissionDescription"
                />

            <TextView
                android:id="@+id/userType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Type of User"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/viewUserDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#545454"
                android:textSize="15dp"
                android:text="@string/viewDescription"
                />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                <RadioButton android:id="@+id/viewUser"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/view"
                             android:onClick="onClick"/>
                <RadioButton android:id="@+id/submissionUser"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/submission"
                             android:onClick="onClick"/>
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/registerButton"
                android:layout_alignBottom="@+id/scrollView"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
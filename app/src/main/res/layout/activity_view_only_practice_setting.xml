<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cis350.versiontwo.PracticeSettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Non-Dermatologist Practice Setting"
        android:id="@+id/dermPracticeSettingText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp" />

    <Spinner
        android:id="@+id/view_only_practice_setting_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8FF"
        android:textSize="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Select from menu"
        android:layout_below="@+id/dermPracticeSettingText"
        android:layout_alignRight="@+id/dermPracticeSettingText"
        android:layout_alignEnd="@+id/dermPracticeSettingText" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8F8FF"
        android:textSize="10dp"
        android:id="@+id/secondary_setting_spinner"
        android:layout_below="@+id/view_only_practice_setting_spinner"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/proceed_button"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/view_only_practice_setting_spinner"
        android:layout_alignEnd="@+id/view_only_practice_setting_spinner" />


</RelativeLayout>
